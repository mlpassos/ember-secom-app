<?xml version='1.0' encoding='utf-8'?>
<widget id="br.pa.gov.secom.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EmbeterMaterialize</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- you can use any density that exists in the Android project -->
        <splash src="res/screen/android/logo-app.png" density="land-hdpi"/>
        <splash src="res/screen/android/logo-app.png" density="land-ldpi"/>
        <splash src="res/screen/android/logo-app.png" density="land-mdpi"/>
        <splash src="res/screen/android/logo-app.png" density="land-xhdpi"/>

        <splash src="res/screen/android/logo-app.png" density="port-hdpi"/>
        <splash src="res/screen/android/logo-app.png" density="port-ldpi"/>
        <splash src="res/screen/android/logo-app.png" density="port-mdpi"/>
        <splash src="res/screen/android/logo-app.png" density="port-xhdpi"/>

        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <!-- <icon src="res/android/ldpi.png" density="ldpi" />
        <icon src="res/android/mdpi.png" density="mdpi" /> -->
        <icon src="res/icons/android/android-icon-72x72.png" density="hdpi" />
        <!-- <icon src="res/android/xhdpi.png" density="xhdpi" />
        <icon src="res/android/xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/xxxhdpi.png" density="xxxhdpi" /> -->

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="SplashMaintainAspectRatio" value="true" />
</widget>