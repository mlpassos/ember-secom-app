<div class="container">
  <div class="row">
    <div class="col s12 m12">
      {{!-- {{log session.currentUser}} --}}
      {{#if session.user.isLoggedIn}}
        {{!-- {{#each session.currentUser.providerData as |user|}} --}}
          <h1 class="header">Olá,</h1>
          <h4 class="header">{{session.user.displayName}}</h4>
          <img src="{{model.imageUrl}}" alt="avatar do usuário">
          <div class="form-horizontal">
			  <div class="form-group">
			    <label class="col-sm-2 control-label">Nome</label>
			    <div class="col-sm-10">
			      {{input type="text" value=model.displayName class="form-control" placeholder="The name of the Library"}}
			    </div>
			  </div>
			  <div class="form-group">
			    <label class="col-sm-2 control-label">Email</label>
			    <div class="col-sm-10">
			      {{input type="text" value=model.email class="form-control" placeholder="The address of the Library"}}
			    </div>
			  </div>
			  <div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			      {{!-- {{action 'saveLibrary' model}} --}}
			      <button type="submit" class="btn btn-default">Save changes</button>
			    </div>
			  </div>
		  </div>
        {{!-- {{/each}} --}}
      {{else}}
          <h1 class="header">{{model.title}}</h1>
          <h4 class="header">{{model.subtitle}}</h4>
          {{model.content}}
      {{/if}}
      
    </div>
  </div>
</div>